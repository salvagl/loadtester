# LoadTester Environment Variables
# Copy this file to .env and configure your values

# Host User IDs for volume mounting (Linux/Mac)
# For Windows, these can be left as default
HOST_UID=1000
HOST_GID=1000

# AI Service API Keys (at least one required only if USE_LOCAL_OPENAPI_PARSING=false)
GOOGLE_API_KEY=your_google_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# LoadTester Configuration
LOG_LEVEL=INFO
DEGRADATION_RESPONSE_TIME_MULTIPLIER=5.0
DEGRADATION_ERROR_RATE_THRESHOLD=0.5
DEFAULT_TEST_DURATION=60
MAX_FILE_SIZE=10485760

# OpenAPI Parsing Configuration
# Set to 'true' to use local parsing (no AI, no API costs)
# Set to 'false' to use AI-powered parsing (requires API keys)
USE_LOCAL_OPENAPI_PARSING=true

# Database
DATABASE_URL=sqlite:///data/loadtester.db